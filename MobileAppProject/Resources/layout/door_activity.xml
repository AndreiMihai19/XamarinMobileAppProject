<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF4B7"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
       >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Username"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000000"
                android:fontFamily="@font/nexa_black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Local Time"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000000"
                android:fontFamily="@font/nexa_black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Door Status"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000000"
                android:fontFamily="@font/nexa_black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="username"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000000"
                android:fontFamily="@font/nexa_black"/>

            <TextClock
                android:format24Hour="hh:mm:ss"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000000"
                android:fontFamily="@font/nexa_black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="door status"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000000"
                android:fontFamily="@font/nexa_black"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Door Status"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:fontFamily="@font/nexa_black"
        
        />

    <Button
        android:id="@+id/XbtnOpendoor"
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/usa_deschisa"
        android:text="Open Door"
        android:textSize="30dp"
        android:fontFamily="@font/nexa_black"/>

    <Button
        android:id="@+id/XbtnCloseDoor"
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/usa_inchisa"
        android:text="Close Door"
        android:textSize="30dp"
        android:fontFamily="@font/nexa_black"/>

   
    <Button
        android:id="@+id/XbtnBack"
        android:text="Back"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:fontFamily="@font/nexa_black"
        android:backgroundTint="@android:color/holo_orange_light" 
        />

</LinearLayout>