<?xml version="1.0" encoding="utf-8" ?> 
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6E6E6E"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
       >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Username"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Local Time"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Door Status"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

            <TextClock
                android:format24Hour="hh:mm:ss"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

            <TextView
                android:id="@+id/door_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Menu"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:fontFamily="@font/roboto_black"
        
        />

    <Button
        android:id="@+id/XbtncreateUsers"
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:text="Create users"
        android:textSize="30dp"
        android:background="#E9AB17"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_black"/>

    <Button
        android:id="@+id/XbtnshowUsers"
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:text="Show users"
        android:textSize="30dp"
        android:background="#E9AB17"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_black"/>

    <Button
        android:id="@+id/XbtnMenu"
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:text="Menu"
        android:textSize="30dp"
        android:background="#E9AB17"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_black"/>

    <Button
        android:id="@+id/XbtnBack"
        android:text="Back"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_black"
        android:backgroundTint="#E9AB17" 
        />

</LinearLayout>