<?xml version="1.0" encoding="utf-8" ?> 
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF4B7"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
       >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Username"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Local Time"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Door Status"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_black"/>

            <TextClock
                android:format24Hour="hh:mm:ss"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_black"/>

            <TextView
                android:id="@+id/door_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_black"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Default Activities"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:fontFamily="@font/roboto_black"
        
        />
    <TextView
        android:id="@+id/textCurentActivityLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10dp"
        android:textAlignment="center"
        android:textColor="#0aa0b0"
        android:paddingTop="1dp"
        android:paddingBottom="10dp"
        android:fontFamily="@font/roboto_black"
        
        />
     <TextView
        android:id="@+id/textCurentActivityTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10dp"
        android:textAlignment="center"
        android:textColor="#0aa0b0"
        android:paddingTop="1dp"
        android:paddingBottom="10dp"
        android:fontFamily="@font/roboto_black"
        
        />
     <TextView
        android:id="@+id/textCurentActivityDoor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10dp"
        android:textAlignment="center"
        android:textColor="#0aa0b0"
        android:paddingTop="1dp"
        android:paddingBottom="10dp"
        android:fontFamily="@font/roboto_black"
        
        />

    <Button
        android:id="@+id/XbtnJob"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/usa_deschisa"
        android:text="Job"
        android:textSize="30dp"
        android:fontFamily="@font/roboto_black"/>

    <Button
        android:id="@+id/XbtnHoliday"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/usa_inchisa"
        android:text="Holiday"
        android:textSize="30dp"
        android:fontFamily="@font/roboto_black"/>

     <Button
        android:id="@+id/XbtnWeekend"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="?android:attr/actionModeWebSearchDrawable"
        android:text="Weekend"
        android:textSize="30dp"
        android:fontFamily="@font/roboto_black"/>

    <Button
        android:id="@+id/XbtnManual"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="?android:attr/actionModeWebSearchDrawable"
        android:text="Manual"
        android:textSize="30dp"
        android:fontFamily="@font/roboto_black"/>
   
   
    <Button
        android:id="@+id/XbtnBack"
        android:text="Back"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_black"
        android:backgroundTint="@android:color/holo_orange_light" 
        />

</LinearLayout>