<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6E6E6E"
    tools:gridSpec="1|8|#0093eeff|K:#ee8700ff:16,l:72,l:16,r|S:#83ee00ff:16,0,l:16,56,l:16,0,r"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
       >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Email"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Local Time"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="door status"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

      <TextClock
        android:format24Hour="hh:mm"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:fontFamily="@font/roboto_black"/>

            
            <TextView
                android:id="@+id/door_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>


        </LinearLayout>

    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

         <View
         android:layout_width="match_parent"
         android:layout_height="10dp"
         android:background="#E9AB17" />

    </LinearLayout>

       <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:paddingTop="30dp"
        android:fontFamily="@font/roboto_black"    
        />

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/largeCircle"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_x="5dp"
            android:layout_y="90dp"
            android:background="@drawable/circle_large"/>

        <View
            android:id="@+id/smallCircle"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_x="85dp"
            android:layout_y="170dp"
            android:background="@drawable/circle_small" />

        <TextView
            android:id="@+id/temperatureValue"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:text="16"
            android:textSize="100dp"
            android:layout_x="150dp"
            android:layout_y="210dp"
            android:textColor="#000000"
            android:fontFamily="@font/roboto_black"
            
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="o"
            android:textSize="50dp"
            android:layout_x="170dp"
            android:layout_y="310dp"
            android:textColor="#000000"
            android:fontFamily="@font/roboto_black"
            />

        <TextView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:text="C"
            android:textSize="60dp"
            android:layout_x="195dp"
            android:layout_y="330dp"
            android:textColor="#000000"
            android:fontFamily="@font/roboto_black"
            
            />

        <Button
            android:id="@+id/XbtnMinus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/minus_icon"
            android:layout_x="15dp"
            android:layout_y="255dp"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/XbtnPlus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/add_icon"
            android:layout_x="333dp"
            android:layout_y="255dp"
            android:textColor="#000000"
            />


    </AbsoluteLayout>


    <Button
        android:id="@+id/XbtnBack"
        android:text="Back"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_black"
        android:backgroundTint="#E9AB17" 
        />

</LinearLayout>
