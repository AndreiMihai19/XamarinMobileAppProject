<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:background="#6E6E6E">

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            
       >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Email"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Local Time"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Door Status"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

            <TextClock
                android:format24Hour="hh:mm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

            <TextView
                android:id="@+id/door_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

        </LinearLayout>

    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

         <View
         android:layout_width="match_parent"
         android:layout_height="10dp"
         android:background="#E9AB17" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create user"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:paddingBottom="60dp"
        android:paddingTop="30dp"
        android:fontFamily="@font/roboto_black"
           
            />

    <TextView
        android:text="Username"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/roboto_black"
            
 
        />

    <EditText
        android:id="@+id/XcreateUsername" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/roboto_black"
        />
    <TextView
        android:text="Password"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/roboto_black"
  />
    <EditText
        android:id="@+id/XcreatePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"

        />

    <TextView
        android:text="First name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/roboto_black"
  />
    <EditText
        android:id="@+id/XcreateFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"

        />

    <TextView
        android:text="Last name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/roboto_black"
  />
    <EditText
        android:id="@+id/XcreateLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"

        />

    <TextView
        android:text="CNP"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/roboto_black"
  />
    <EditText
        android:id="@+id/XcreateCNP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="15dp">

         <Button
            android:id="@id/XbtnBack"
            android:text="Back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
           
            android:textColor="#000000"
            android:fontFamily="@font/roboto_black"
            android:backgroundTint="#E9AB17" 
        />

        <Button
            android:id="@+id/XbtnaddUser"
            android:text="Add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:fontFamily="@font/roboto_black"
            android:backgroundTint="#E9AB17" 
        />

    </LinearLayout>


</LinearLayout>