<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6E6E6E"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
       >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Username"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Local Time"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Door Status"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

            <TextClock
                android:format24Hour="hh:mm:ss"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

            <TextView
                android:id="@+id/textViewDoorStatus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_black"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/XbtnActivity"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="#E9AB17"
            android:text="Activity"
            android:textSize="15dp"
            android:fontFamily="@font/roboto_black"/>

        <TextView
            android:id="@+id/textViewActivityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAlignment="viewEnd"
            android:layout_marginRight="20dp"
            android:textColor="#000000"
            android:paddingRight="10dp"
            android:fontFamily="@font/roboto_black"
        
        />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu Page"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:paddingTop="10dp"
        android:paddingBottom="30dp"
        android:fontFamily="@font/roboto_black"
        
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        
       
        <LinearLayout
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:layout_gravity="top"
        >
        <ImageView 
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:src="@drawable/light_bulb" />

             <TextView
        android:id="@+id/tvLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:gravity="center"
        android:text="99"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/roboto_black"
        
        />



            </LinearLayout>

        <LinearLayout
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_gravity="top"
        >
        <ImageView 
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:paddingTop="10dp"
        android:src="@drawable/temperature" />

             <TextView
                android:id="@+id/tvTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:gravity="center"
        android:text="18"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/roboto_black"
        
        />



            </LinearLayout>
        <LinearLayout
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_gravity="top"
        >
        <ImageView 
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:paddingTop="10dp"
        android:src="@drawable/door" />

             <TextView
                android:id="@+id/tvDoor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Close"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:fontFamily="@font/roboto_black"
        
        />



            </LinearLayout>



    </LinearLayout>

     

    

    <Button
        android:id="@+id/XbtnLight"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/light_bulb"
        android:text="Light"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#E9AB17"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_black"/>

    <Button
        android:id="@+id/XbtnTemperature"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/temperature"
        android:text="Temperature"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#E9AB17"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_black"/>

    <Button
        android:id="@+id/XbtnDoor"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/door"
        android:text="Door"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#E9AB17"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_black"/>

    <Button
        android:id="@+id/XbtnBack"
        android:text="Back"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_black"
        android:backgroundTint="#E9AB17" 
        />

</LinearLayout>